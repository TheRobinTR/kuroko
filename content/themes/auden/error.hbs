{{!< default}}

{{!-- Page 404 --}}
<div class="container-fluid wrapper">
  <div class="error">
    <div class="error__content">
      
      {{!-- Error title and messages --}}
      <h1 class="error__title">{{t "404 Error"}}</h1>
      <div class="error__info">
        <div class="error__description">
          {{t "Something went wrong! We can't seem to find the page you are looking for"}}
        </div>

        {{!-- Links to home and contact page --}}
        <div class="error__links">
          <a class="link-home js-link-home" href="/">
            {{> icon name="home" }}
          </a>
          <a class="link-back js-link-back" href="javascript:history.back()">
            {{> icon name="arrow-left" }}
          </a>
        </div>
      </div>

    </div>

    <div class="error__recommend">

      <h5 class="section__title">{{t "Explore topics"}}</h5>
      {{> wave}}
      {{#get "tags" limit="4" include="count.posts" order="count.posts desc"}}
        <div class="row">
        {{#foreach tags}}
          <div class="col-xs-12 col-sm-6 col-lg-3">
            {{> tag-card}}
          </div>
        {{/foreach}}
        </div>
      {{/get}}

      <h5 class="section__title">{{t "Latest posts"}}</h5>
      {{> wave}}
      {{#get "posts" limit="3" include="tags,authors" limit=@config.posts_per_page}}
      <section class="section all-posts">
        <div class="row posts">
          {{#foreach posts visibility="all"}}
            <div class="col-xs-12 col-md-6 col-lg-4 post-wrap">
              {{> post-card class="col"}}
            </div>
          {{/foreach}}
        </div>
      </section>
      {{/get}}

    </div>
  </div>
</div>