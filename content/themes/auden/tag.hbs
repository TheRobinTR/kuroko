{{!< default}}

<div class="container-fluid wrapper">
  {{!-- Everything inside the #tag pulls data from the tag --}}
  {{!-- Tag header --}}
  {{#tag}}
    <section class="tag-header{{^if feature_image}} no-img{{/if}}">
      <div class="geometric-bg"></div>
      {{#if feature_image}}
        <div class="tag-header__image">
          <img class="lazyload"
              data-srcset="{{img_url feature_image size="s"}} 300w,
                      {{img_url feature_image size="m"}} 600w,
                      {{img_url feature_image size="l"}} 1000w,
                      {{img_url feature_image size="xl"}} 2000w"
              data-sizes="(max-width: 1000px) 50vw, 700px"
              data-src="{{img_url feature_image size="l"}}"
              alt="{{name}}" 
              src="{{asset 'images/img-placeholder-md.jpg'}}"
          />
        </div>
      {{/if}}

      <div class="tag-header__content">
        <h1 class="tag-header__title">{{name}}</h1>
        {{#if description}}
          <div class="tag-header__description">{{description}}</div>
        {{/if}}
        <div class="tag-header__counter">
          {{plural ../pagination.total empty=(t 'No posts') singular=(t '1 post') plural=(t '% posts')}}
        </div>
      </div>
    </section>
  {{/tag}}

  {{!-- The main content/post by the author --}}
  {{#if posts}}
    <div class="row">
      <div class="col-xs-12">
        <section class="section all-posts">
          <div class="row posts">
            {{#foreach posts  visibility="all"}}
              <div class="col-xs-12 col-md-6 col-lg-4 post-wrap">
                {{> post-card class="col tag"}}
              </div>
            {{/foreach}}
          </div>
          <div class="row">
            <div class="col-xs-12 center-xs">
              <button id="load-more-posts" class="btn btn--wide btn--brand btn--bordered">
                {{t "Load more posts"}}
              </button>
            </div>
          </div>
        </section>
      </div>
    </div>
  {{/if}}
</div>